<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".StartActivity"
    android:background="@drawable/mujerdelante">

    <ImageView
        android:id="@+id/Observa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/observa"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"/>


    <!-- TODO: poner todo 22 pd mas abajo-->
    <ImageButton
        android:id="@+id/buttonBrazo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/brazo1"
        android:onClick="onClickBrazos"
        android:background="@null"
        android:layout_marginLeft="77dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="173dp"
        android:layout_below="@+id/buttonAtras"
        android:layout_alignLeft="@+id/buttonGirar"
        android:layout_alignStart="@+id/buttonGirar" />

    <!-- FIXME: android:layout_marginTop="299dp 321"-->

    <ImageButton
        android:id="@+id/buttonBrazo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:onClick="onClickBrazos"
        android:src="@drawable/brazo2"
        android:layout_marginLeft="105dp"
        android:layout_marginStart="105dp"
        android:layout_alignTop="@+id/buttonBrazo1"
        android:layout_toRightOf="@+id/buttonBrazo1"
        android:layout_toEndOf="@+id/buttonBrazo1" />

    <ImageButton
        android:id="@+id/buttonPierna1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:onClick="onClickPiernas"
        android:src="@drawable/pierna1"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_below="@+id/buttonBrazo2"
        android:layout_alignLeft="@+id/buttonBrazo1"
        android:layout_alignStart="@+id/buttonBrazo1" />

    <!-- FIXME: android:layout_marginTop="103" 321"-->

    <ImageButton
        android:id="@+id/buttonAbdomen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:onClick="onClickAbdomen"
        android:src="@drawable/abdomen"
        android:layout_marginBottom="66dp"
        android:layout_marginLeft="-13dp"
        android:layout_alignBottom="@+id/buttonBrazo1"
        android:layout_toRightOf="@+id/buttonBrazo1"
        android:layout_toEndOf="@+id/buttonBrazo1" />

    <ImageButton
        android:id="@+id/buttonPierna2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:onClick="onClickPiernas"
        android:src="@drawable/pierna2"
        android:layout_below="@+id/buttonBrazo2"
        android:layout_toRightOf="@+id/buttonPierna1"
        android:layout_toEndOf="@+id/buttonPierna1" />

    <ImageButton
        android:id="@+id/buttonGirar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:onClick="onClickGirar"
        android:src="@drawable/flecha"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/buttonAtras"
        style="@android:style/Widget.DeviceDefault.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Observa"
        android:layout_marginTop="64dp"
        android:layout_toRightOf="@+id/buttonGirar"
        android:backgroundTint="#29ABE2"
        android:onClick="onClickAtras"
        android:text="Atras"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#4E4F4F" />


    <Button
        android:id="@+id/buttonMostrar"
        style="@android:style/Widget.DeviceDefault.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonAtras"
        android:layout_alignRight="@+id/buttonAtras"
        android:layout_below="@+id/buttonBrazo2"
        android:layout_marginTop="28dp"
        android:backgroundTint="#29ABE2"
        android:onClick="onClickMostrar"
        android:text="Mostrar"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#4E4F4F" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
